[alias]
  a = add
  b = branch
  ba = branch -a --color
  bd = branch -d
  bdd = branch -D
  c = commit
  cnv = commit --no-verify
  ca = commit --amend
  cb = checkout -b
  cm = commit -m
  cmnv = commit --no-verify -m
  co = checkout
  c- = checkout -- .
  cpx = cherry-pick -x
  d = diff --color
  dc = diff --color --cached
  g = gc
  l = log --color
  ld = log -p --color
  lp = log --color --pretty=oneline
  ls = log --color --stat-name-width=120
  lsw = log --stat=800,400 --color
  m = merge
  p = push
  pn = remote prune origin
  ra = rebase --abort
  rb = rebase master
  rc = rebase --continue
  rs = reset HEAD .
  rsh = reset --hard HEAD
  s = status
  u = pull
  undo = reset --soft HEAD^
  who = shortlog -s

